<div class="bottom">
    <% unless signed_in? %>
      <h2>Book a Flight</h2>
    <% end %>
    <form action="">
      <div class="form-group">
        <div class="controls">
          <i class="fa fa-sort"></i>
          <select class="floatLabel">
            <option value="blank" hidden></option>
            <option value="Apple">Lagos</option>
            <option value="Banana">Ibadan</option>
            <option value="Kiwi">PortHarcourt</option>
            <option value="Orange">Abuja</option>
            <option value="Watermelon">Apapa</option>
          </select>
          <label for="location">Departure City</label>
        </div>
        <div class="controls">
          <i class="fa fa-sort"></i>
          <select class="floatLabel">
            <option value="blank" hidden></option>
            <option value="Apple">Lagos</option>
            <option value="Banana">Ibadan</option>
            <option value="Kiwi">PortHarcourt</option>
            <option value="Orange">Abuja</option>
            <option value="Watermelon">Apapa</option>
          </select>
          <label for="location">Destination</label>
        </div>
        <div class="controls">
          <i class="fa fa-sort"></i>
          <select class="floatLabel">
            <option value="blank" hidden></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
          <label for="fruit">Number of Passengers</label>
        </div>
        <div class="controls">
            <input name="arrival" type="text" onfocus="(this.type='date')" class="floatLabel" onblur="(this.type='text')"/>
            <label for="arrival">Departure Date</label>
        </div>
        <div class="form-group">
            <div class="controls">
                <button class="search-button" data-type="member-1">Search</button>
            </div>
        </div>
    </form>
</div>