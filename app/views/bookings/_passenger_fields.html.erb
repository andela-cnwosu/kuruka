<div class="nested-fields form-inline" id ="nested-fields">
  <div class="form-group">
    <%= f.text_field :first_name, :class => "form-control", placeholder: "Last Name", required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :last_name, :class => "form-control", placeholder: "Last Name", required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :phone, :class => "form-control", placeholder: "Phone" %>
  </div>
  <label class="control control-radio">
      <%= radio_button_tag :travel_class, '23' %>
      <div class="control-indicator"></div>
  </label>
  <div class="links pull-right">
    <%= link_to_remove_association "Delete", f, class: "btn btn-danger",:confirm => "Are you sure?" %>
  </div>
  <hr>
</div>