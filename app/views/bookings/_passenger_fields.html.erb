<div class="nested-fields form-inline" id ="nested-fields">
  <div class="form-group">
    <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: true %>
  </div>
  <div class="form-group">
      <div class="input-group"> 
        <%= select_tag :country_code, options_for_select((Country.all).map{|country| ["#{country.country_code} â–¾", country.country_code]}), {include_blank: false, class: 'input-group-addon country-code'} %>
          <%#= f.text_field :phone, class: "form-control", pattern: "[1-9]{1}[0-9]{6,9}", placeholder: "Phone" %>
          <%= f.text_field :phone, class: "form-control phone-input", placeholder: "Phone" %>
      </div>
  </div>
  <div class="form-group">
    <label class="control control-radio">
      <%= f.radio_button :airfare_id, 1, class: "class-radio", required: true %>
      <div class="control-indicator first-class"></div>
    </label>
    <label class="control control-radio">
      <%= f.radio_button :airfare_id, 2, class: "class-radio" %>
      <div class="control-indicator business"></div>
    </label>
    <label class="control control-radio">
      <%= f.radio_button :airfare_id, 3, class: "class-radio" %>
      <div class="control-indicator economy"></div>
    </label>
    <small class="selected-fare"></small>
  </div>
  
  <div class="links pull-right">
    <%= link_to_remove_association "Delete", f, class: "btn btn-danger", confirm: "Are you sure?" %>
  </div>
  <hr>
</div>