.horizontal-scrollable-tabs {
  min-height: 50px;
}

.horizontal-scrollable-tabs .arrow-right {
  float: right;
}
.horizontal-scrollable-tabs .arrow-left {
  float: left;
}
/* Customize your arrows here */
.horizontal-scrollable-tabs .scroller {
  color: #0f93db;
  padding: 10px 10px;
  margin-top: 40px;
  display: none;
  i {
    font-size: 28px;
    cursor: pointer;
  }
}
.horizontal-scrollable-tabs .scroller.disabled {
  color: gray;
}
.horizontal-scrollable-tabs .horizontal-tabs .nav-tabs-horizontal {
  overflow-x: auto;
  overflow-y: hidden;
  display: -webkit-box;
  display: -moz-box;
}

.horizontal-scrollable-tabs .nav-tabs a {
    color: #555555;
    padding: 10px 30px;
    background-color: #f0ffff;
    border: 15px solid #f0f8ff;
}

.horizontal-scrollable-tabs .nav-tabs a .day {
    font-size: 24px;
}

.horizontal-scrollable-tabs .nav-tabs a .day hr {
    margin: 5px;
}

.horizontal-scrollable-tabs .nav-tabs > li > a:hover {
    border-color: transparent;
    background-color: #f0f8ff;
}

.horizontal-scrollable-tabs .nav-tabs > li.active > a,
.horizontal-scrollable-tabs .nav-tabs > li.active > a:hover,
.horizontal-scrollable-tabs .nav-tabs > li.active > a:focus {
    background-color: #f0ffff;
    border: 15px solid #f0f8ff;
    cursor: default;
    color: #0f93db;
}

.horizontal-scrollable-tabs .nav-tabs > li.active > a::before,
.horizontal-scrollable-tabs .nav-tabs > li.active > a::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    border-color: transparent;
    border-style: solid;
}

.horizontal-scrollable-tabs .nav-tabs > li.active > a::before,
.horizontal-scrollable-tabs .nav-tabs > li.active > a::after {
    border-width: 1.5em;
    border-right-color: #0f93db;
    border-bottom-color: #0f93db;
}

.tab-content.flight-content {
  padding: 20px 30px;
  h2 {
    padding: 10px 10px 40px;
  }
  .message {
    padding: 0 10px;
    font-size: 16px;
  }
  .search-div {
    float: right;
    margin: 30px 10px;
  }
  .btn {
    background-color: #07B3A1;
    border-color: #07B3A1;
    font-size: 16px;
    outline: none;
  }
}

.flight-content .table > thead > tr > th,
.flight-content .table > tbody > tr > td {
    background: #f0ffff;
    padding: 15px;
    border: #fff solid 10px;
    border-top: transparent;
}

.flight-content .table > thead > tr > th {
    background: #f0f8ff;
}

.price-content td {
    padding: 0 10px 30px;
}
/* As it has a mobile focus the scrollbar is removed */
.horizontal-scrollable-tabs .horizontal-tabs .nav-tabs-horizontal::-webkit-scrollbar {
  width: 0 !important;
}
/* It's good to add a min-width so that the items have the same width */
.horizontal-scrollable-tabs .horizontal-tabs .nav-tabs-horizontal > li {
  float: none;
  max-width: 200px;
  text-align: center;
}

.flight-content .table td:last-child {
    width: 30%;
}

.control {
  position: relative;
  margin-bottom: 30px;
  cursor: pointer;
  display: inline-block;
}

.control input {
  position: absolute;
  z-index: -1;
  opacity: 0;
}

.control-indicator {
  position: absolute;
  top: 2px;
  left: 0;
  width: 20px;
  height: 20px;
  background: #e6e6e6;
}

.content-price td {
  margin-bottom: 30px;
}

.content-price {
  margin-bottom: 20px;
  width: 100%;
  td:last-child {
    font-size: 18px;
    font-weight: 300;
  }
}

/* Checked state */
.control input:checked ~ .control-indicator {
  background: #0f93db;
}

/* Hover state whilst checked */
.control:hover input:not([disabled]):checked ~ .control-indicator,
.control input:checked:focus ~ .control-indicator {
  background: #0f93db;
}

/* Check mark */
.control-indicator:after {
  position: absolute;
  display: none;
  content: '';
}

/* Show check mark */
.control input:checked ~ .control-indicator:after {
  display: block;
}

/* Radio button inner circle */
.control-radio .control-indicator:after {
  top: 7px;
  left: 7px;
  width: 6px;
  height: 6px;
  background: #fff;
}
