.horizontal-scrollable-tabs {
  min-height: 50px;
}

.horizontal-scrollable-tabs .arrow-right {
  float: right;
}
.horizontal-scrollable-tabs .arrow-left {
  float: left;
}
/* Customize your arrows here */
.horizontal-scrollable-tabs .scroller {
  color: #0f93db;
  padding: 10px 10px;
  margin-top: 60px;
  display: none;
  i {
    font-size: 28px;
    cursor: pointer;
  }
}
.horizontal-scrollable-tabs .scroller.disabled {
  color: gray;
}
.horizontal-scrollable-tabs .horizontal-tabs .nav-tabs-horizontal {
  overflow-x: auto;
  overflow-y: hidden;
  display: -webkit-box;
  display: -moz-box;
}

.horizontal-scrollable-tabs .nav-tabs a {
    color: #555555;
    padding: 30px;
    background-color: #f0ffff;
    border: 15px solid #f0f8ff;
}

.horizontal-scrollable-tabs .nav-tabs a .day {
    font-size: 24px;
}

.horizontal-scrollable-tabs .nav-tabs a .day hr {
    margin: 5px;
}

.horizontal-scrollable-tabs .nav-tabs > li > a:hover {
    border-color: transparent;
    background-color: #f0f8ff;
}

.horizontal-scrollable-tabs .nav-tabs > li.active > a,
.horizontal-scrollable-tabs .nav-tabs > li.active > a:hover,
.horizontal-scrollable-tabs .nav-tabs > li.active > a:focus {
    background-color: #f0ffff;
    border: 15px solid #f0f8ff;
    cursor: default;
    color: #0f93db;
}

.horizontal-scrollable-tabs .nav-tabs > li.active > a::before,
.horizontal-scrollable-tabs .nav-tabs > li.active > a::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    border-color: transparent;
    border-style: solid;
}

.horizontal-scrollable-tabs .nav-tabs > li.active > a::before,
.horizontal-scrollable-tabs .nav-tabs > li.active > a::after {
    border-width: 1.5em;
    border-right-color: #0f93db;
    border-bottom-color: #0f93db;
}

.tab-content.flight-content {
    padding: 20px 40px;
}
/* As it has a mobile focus the scrollbar is removed */
.horizontal-scrollable-tabs .horizontal-tabs .nav-tabs-horizontal::-webkit-scrollbar {
  width: 0 !important;
}
/* It's good to add a min-width so that the items have the same width */
.horizontal-scrollable-tabs .horizontal-tabs .nav-tabs-horizontal > li {
  float: none;
  max-width: 200px;
  text-align: center;
}